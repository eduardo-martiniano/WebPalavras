@model List<Site01.Models.Palavra>
@{
    Layout = "_Layout";
}
<hr/>
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]
    </div>
}

<br />
<a href="/palavra/cadastrar" class="btn btn-success">Cadastrar</a>
<hr />

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Palavra</th>
            <th scope="col">Nivel</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var palavra in Model)
        {


            <tr>
                <th scope="row">@palavra.Id</th>
                <td>@palavra.Nome</td>
                <td>@palavra.Dificuldade</td>
                <td>
                    <a href="/palavra/atualizar/@palavra.Id" class="btn btn-primary">Editar</a>
                    <a href="/palavra/excluir/@palavra.Id" class="btn btn-secondary">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

